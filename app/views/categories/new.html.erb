<%= render 'shared/content_title', title: 'New Category' %>

<%= render 'shared/errors', form: @category %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'Add Category', class: 'btn btn-success' %>
  <% end %>
</div>